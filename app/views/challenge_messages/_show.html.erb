<% if message.member_id == current_user.id %>
  <p class="text-right">
    <%= message.message %>
    <strong style="color: green"><%= Member.find(message.member_id).user.name %></strong>
  </p>
<% else %>
  <p class="text-left">
    <strong style="color: red"><%= Member.find(message.member_id).user.name %></strong>
    <%= message.message %>
  </p>
<% end %>
