<div class='banner banner-home'>
  <div class="shadow"></div>
  <div class='container'>
    <div class='banner-content'>
      <div>
        <h1>Challenge your friends</h1>
        <p><strong>Motivate each other :)</strong></p>
        <%=link_to 'Start a challenge', new_challenge_path, class: "btn-create btn-lg" %>
        <%=link_to raw('Explore <i class="fa fa-search"></i>'), challenges_path, class: "btn-lg btn-explore" %>
      </div>
    </div>
  </div>
</div>

<div class='container home-text'>
  <h2 class='home-title'>Staff picks <i class="fa fa-heart"></i></h2>
</div>

<div class="wrapper-cards">
  <div class="container">
    <div class="row">
      <% @challenges.each do |challenge| %>
        <div class="col-sm-6 col-md-4 col-lg-3">
          <div class="card">
            <div class="card-picture">
              <% if challenge.picture.url %>
                <%=image_tag challenge.picture.url(:thumb) %>
              <% else %>
                <div class="no-img"><i class="fa fa-image"></i></div>
              <% end %>
            </div>
             <div class="card-desc text-center">

              <h4>
                <%= challenge.title %>
              </h4>
            </div>
            <%=link_to challenge.title, challenge_path(challenge), class: "card-link" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>



