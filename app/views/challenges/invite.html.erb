<div class="container">
  <div class="row">
    <h2 class="text-center">Invite your buddies</h2>
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <%= simple_form_for @challenge do |f| %>
        <%= f.simple_fields_for :invites, @challenge.invites.last do |invite| %>
          <%= render 'invite_fields', f: invite %>
          <div class='links'>
          </div>
        <%end%>
        <p class='text-center'>
          <%= link_to_add_association 'Add', f, :invites, class: 'btn btn-primary' %>
          <%= f.button :submit,  'Send', class: 'btn btn-primary'  %>
        </p>
      <%end%>
    </div>
  </div>
</div>
