<div class='banner banner-explore'>
  <div class="shadow"></div>
  <div class='banner-content'>
    <div class="container">
      <h1 class='text-center'>Get some inspiration!</h1>
    </div>
  </div>
</div>

<div class="bg-white">
  <div class="container">
    <div class="row tabs tabs-dashboard">
      <input type="button" id="group-challenge"  class="tab col-xs-6 col-sm-6 col-md-4 col-md-offset-2 active" value="group challenges">
      <input type="button" id="self-challenge" class="tab col-xs-6 col-sm-6 col-md-4" value="self challenges">
    </div>
  </div>
</div>

<div class="container">

  <div class='row'>
    <div class='tab-group-challenge'>

      <% @challenges.where(yourself: false).each do |challenge| %>
        <div class="col-sm-6 col-md-4 col-lg-3 text-center">
          <div class='card-explore'>
            <% if challenge.picture %>
              <%= cl_image_tag(challenge.picture, width: 200, height: 200, crop: 'thumb', class: 'card-explore-picture') %>
            <% else %>
              <div class="no-img"><i class="fa fa-image"></i></div>
            <% end %>
            <div class="shadow"></div>
            <%=link_to raw('<span>' + challenge.title + '</span>'), challenge_path(challenge), class: 'card-explore-link' %>
          </div>
        </div>
      <% end %>
    </div>


    <div class='row'>
      <div class='tab-self-challenge  tab-invisible'>

        <% @challenges.where(yourself: true).each do |challenge| %>
          <div class="col-sm-6 col-md-4 col-lg-3">
            <div class='card-explore text-center'>
              <% if challenge.picture %>
                <%= link_to challenge_path(challenge) do %>
                  <%= cl_image_tag(challenge.picture, width: 200, height: 200, crop: 'thumb', class: 'img-circle') %>
                <% end %>
              <% else %>
                <div class="no-img"><i class="fa fa-image"></i></div>
              <% end %><br>
              <%=link_to challenge.title, challenge_path(challenge)%>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
